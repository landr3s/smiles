<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee" 
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee 
         http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd" 
         version="4.0">

    <servlet>
        <servlet-name>AddDonationServlet</servlet-name>
        <servlet-class>controller.AddDonationServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>AddDonationServlet</servlet-name>
        <url-pattern>/client/addDonationServlet</url-pattern> <!-- Único para este servlet -->
    </servlet-mapping>

    <servlet>
        <servlet-name>DonationServlet</servlet-name>
        <servlet-class>controller.DonationServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>DonationServlet</servlet-name>
        <url-pattern>/client/donate</url-pattern> <!-- Único para este servlet -->
    </servlet-mapping>

    <servlet>
        <servlet-name>LoginServlet</servlet-name>
        <servlet-class>controller.LoginServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>LoginServlet</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>AddCommentServlet</servlet-name>
        <servlet-class>controller.AddCommentServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>AddCommentServlet</servlet-name>
        <url-pattern>/admin/addComment</url-pattern>
    </servlet-mapping>
</web-app>
